<Window x:Class="WpfTutorialSamples.Rich_text_controls.RichTextEditorSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Valeron4ik+" Height="300" Width="400">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Name="btnOpen" Content="Open" Click="btnOpen_Click" />
            <Button Name="btnSave" Content="Save" Click="btnSave_Click_1" />
            <Button Name="btnSaveAs" Content="Save As" Click="btnSave_Click" />
            <ComboBox Name="cmbFontFamily" Width="150" SelectionChanged="cmbFontFamily_SelectionChanged" />
            <ComboBox Name="cmbFontSize" Width="50" IsEditable="True" TextBoxBase.TextChanged="cmbFontSize_TextChanged" />
        </ToolBar>
        <RichTextBox Name="rtbEditor" SelectionChanged="rtbEditor_SelectionChanged" />
    </DockPanel>
</Window>